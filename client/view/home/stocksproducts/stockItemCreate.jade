div(style="display:{{page.StepCreate}};")
  form#stockItemCreate
    .col-md-offset-2
      table.form
        tr
          td
            div.width80 SKU：
          td
            input.round.default-width-input(type='text', can-value='data.sku',name='sku',placeholder='留空系统自动生成')
          td
            div.width80 商品名称：
          td
            input.round.default-width-input(type='text', can-value='data.name', name='name', rangelength='2,100', required)
        tr
          td
            div.width80 条形码：
          td
            input.round.default-width-input(type='text', can-value='data.barcode', name='barcode', rangelength='2,50', required)
          td
            div.width80 商品体积：
          td
            input.round.default-width-input(type='text', can-value='data.volume',name='volume')
        tr
          td
            div.width80 商品重量：
          td
            input.round.default-width-input(type='text', can-value='data.weight',name='weight')
          td
            div.width80 计量单位：
          td
            input.round.default-width-input(type='text', can-value='data.uom',name='uom')
        tr
          td
            div.width80 所属品牌：
          td
            input.round.default-width-input#brandSelector(type='text', name='brand', placeholder='请选择...')
          td
            div.width80 所属种类：
          td
            input.round.default-width-input#categorySelector(type='text', name='category', placeholder='请选择...')
        tr
          td
            div.width80 备注：
          td
            input.round.default-width-input(type='text', can-value='data.desc',name='desc')
          td
            div.width80 危险品：
          td
            input.round(type='checkbox', can-value='data.hazardFlag',name='hazardFlag')

  .col-md-offset-10.col-md-2
    button.button.round.blue.image-right.ic-add#createStockItem 保存

div(style="display:{{page.StepUploadImage}};")
  p.text-center 上传商品图片
  input.file-loading#filePicker(type='file', accept="image/*" multiple)
